    <script>
      $(".expl, .social a").tooltip();
      $(".login .services a").on("click",function(){
        $(".login .worker").show().find(".message").html("verbinde...");
      });
      if(location.hash==="#loginpop"){
        $(".modal.login").modal("show");
        location.hash="";
      }
      var b = $("#bookmark");
      $(window.document).on("scroll",function(){
        if(window.pageYOffset>100 && !b.is(":visible")){
          b.stop().fadeIn();
        } else if (window.pageYOffset<100 && b.is(":visible")){
	  b.stop().fadeOut();
        }
